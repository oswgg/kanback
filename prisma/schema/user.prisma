model User {
    id                Int      @id @default(autoincrement())
    organization_uuid String?  @db.VarChar(36)
    username          String   @db.VarChar(50)
    first_name        String   @db.VarChar(50)
    last_name         String   @db.VarChar(50)
    email             String   @unique
    password          String
    age               Int?     @db.UnsignedInt
    sex               Int?     @db.UnsignedTinyInt()
    role              OrgRole
    language          Language @default(en)
    image_url         String?
    created_at        DateTime @default(now())

    // Has
    organization    Organization?       @relation(fields: [organization_uuid], references: [uuid])
    invitation_code OrgInvitationCodes?
    createdProjects Project[]
    joinedProjects  ProjectMember[]

    @@map("users")
}

enum Language {
    es
    en
}

enum OrgRole {
    none
    admin
    manager
    member
}
